FROM node

ARG PORT=9615
ENV PORT=${PORT}

RUN apt update && apt install -y git
RUN git clone https://github.com/armoniax/amax.explorer.git && echo "v0.5"

RUN mv /amax.explorer/backend /opt/expsvr
RUN rm -rf /amax.explorer
WORKDIR /opt/expsvr

RUN cd /opt/expsvr/server && npm update
RUN cd /opt/expsvr/server && npm install -g pm2@2.10.4
RUN cd /opt/expsvr/server && npm install -g

CMD ["pm2-runtime", "/opt/expsvr/server/ecosystem.config.js", "--web"]

EXPOSE ${PORT}
